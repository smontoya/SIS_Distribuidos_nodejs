<div class="box box-widget widget-user-2">
  <!-- Add the bg color to the header using any of the bg-* classes -->
  <div class="widget-user-header bg-yellow">
    <div class="widget-user-image">
      <img class="img-circle" src="/assets/images/profile.jpg" alt="User Avatar">
    </div>
    <!-- /.widget-user-image -->
    <h3 class="widget-user-username">
      <%=model.nombres %> <%=model.apellidos %></h3>
    <h5 class="widget-user-desc"><%=model.seccion %></h5>
  </div>
  <div class="box-footer no-padding">
    <ul class="nav nav-stacked">
      <li>
        <a href="#">Nombres
          <span class="pull-right "><%=model.nombres %></span>
        </a>
      </li>
      <li>
        <a href="#">Apellidos
          <span class="pull-right "><%=model.apellidos %></span>
        </a>
      </li>
      <li>
        <a href="#">Correo electr√≥nico 
          <span class="pull-right "><%=model.email %></span>
        </a>
      </li>
      <li>
        <a href="#">RUN 
          <span class="pull-right "><%=model.rut %></span>
        </a>
      </li>

      <li>
        <a href="#">Habilitado
          <span class="pull-right ">
            <% if (model.estado){ %> <i class="fa fa-check fa-2x"></i>
            <%}else{%>
              <i class="fa fa-ban fa-2x"></i>
            <%};%></span>
        </a>
      </li>
    </ul>


  </div>
</div>

<a href="/usuarios" class="btn btn-primary">Volver a listado de usuarios</a>
